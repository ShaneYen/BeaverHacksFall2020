WindowManager:
    MainWindow:
    TimerWindow:

<Label>
    bold: True
    font_size: 25

<SmoothButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ""
    back_color: (1,1,1,1)
    border_radius: 18
    color: self.back_color
    bold: True
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle:(self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2

<CustomButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ""
    back_color: (0.713725490196078,0.784313725490196,0.309803921568627,1)
    border_radius: 18
    color: self.back_color
    bold: True
    canvas.before:
        Color:
            rgba: self.back_color

<MainWindow>:
    name: "main"

    canvas:
        Color:
            rgb: (0.125490196078431,0.141176470588235,0.129411764705882)

        Rectangle:
            pos: self.pos
            size: self.size

    set_number: set
    duration: dura
    break_duration: break_dura

    BoxLayout:
        orientation: "vertical"
        padding:[30,0,30,40]

        Label:
            text: "HIIT Timer"
            font_size: 80
            color: root.label_font_color
            bold: True
            size_hint: 1, .3

        GridLayout:
            cols:2
            padding: [20]
            size_hint: 1, .4

            Label:
                text: "# of Sets: "
                color: root.label_font_color

            TextInput:
                id: set
                multiline: False
                input_filter: 'int'

            Label:
                text: "High Intensity Duration: "
                color: root.label_font_color

            TextInput:
                id: dura
                multiline: False
                input_filter: 'int'

            Label:
                text: "Low Intensity Duration: "
                color: root.label_font_color

            TextInput:
                id: break_dura
                multiline: False
                input_filter: 'int'

        SmoothButton:
            text: "Start Workout"
            back_color: 1,1,1,1
            color: root.label_font_color
            size_hint: 1, 0.2
            on_release:
                root.countdown()
                root.manager.transition.direction ="left"


<TimerWindow>:
    name: "timer"
    counter: counter
    pausemessage:pausemessage
    pausebutton:pausebutton
    stop_button: stop_button
    workouttype:workouttype
    cyclesleft:cyclesleft

    canvas:
        Color:
            rgb: (0.125490196078431,0.141176470588235,0.129411764705882)

        Rectangle:
            pos: self.pos
            size: self.size

    CustomButton:
        id: pausebutton
        text: "Pause"
        font_size: 100
        background_color: 0.125490196078431,0.141176470588235,0.129411764705882,1
        color: 1,1,1,0
        size_hint: 1,1
        pos_hint: {"x": 0,"bottom":1}
        on_release: root.pause_button()

    SmoothButton:
        id: stop_button
        text: "Stop"
        font_size: 40
        size_hint: 0.2, 0.15
        pos_hint: {"x": 0.005, "y": 0.005}
        back_color: 0.125490196078431,0.141176470588235,0.129411764705882,1
        on_release:
            app.root.current = "main"
            root.manager.transition.direction ="right"

    Label:
        id: counter
        text: "Go!"
        font_size: 100
        pos_hint: {"top": 1}

    Label:
        id: pausemessage
        text: ""
        font_size: 50
        pos_hint: {"top": 1.25}

    Label:
        id: workouttype
        text: ""
        font_size: 35
        pos_hint: {"top": 1.4}

    Label:
        id: cyclesleft
        text: ""
        font_size: 25
        pos_hint: {"top": 1.325}