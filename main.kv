WindowManager:
    MainWindow:
    TimerWindow:

<Label>:
    bold: True
    font_size: 20

<TextInput>:
    background_color: (0,0,0,0)
    background_normal: ""
    back_color: (1,1,1,1)
    border_radius: 10
    color: self.back_color
    bold: True
    font_size: 25
    # left, right
    padding_x:[self.width/2.0 - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached) / 2.0, 0]  if self.text else [self.center[0], 0]
    # top, bottom
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle:(self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2

<SmoothButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ""
    back_color: (1,1,1,1)
    border_radius: 18
    color: self.back_color
    bold: True
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle:(self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2

<CustomButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ""
    back_color: (1,1,1,1)
    border_radius: 18
    color: self.back_color
    bold: True
    canvas.before:
        Color:
            rgba: self.back_color

<MainWindow>:
    name: "main"

    canvas:
        Color:
            rgb: (0.125490196078431,0.141176470588235,0.129411764705882)

        Rectangle:
            pos: self.pos
            size: self.size

    set_number: set
    duration: dura
    break_duration: break_dura

    BoxLayout:
        orientation: "vertical"
        padding:[50,50,50,50]

        Label:
            text: "HIIT Timer"
            font_size: 85
            color: root.label_font_color
            bold: True
            size_hint: 1, .15

        BoxLayout:
            orientation: "vertical"
            padding:[100,50,100,50]
            size_hint: 1, .7

            Label:
                text: "# of Sets: "
                color: root.label_font_color

            TextInput:
                id: set
                multiline: False
                input_filter: 'int'


            Label:
                text: "High Intensity Duration: "
                color: root.label_font_color

            TextInput:
                id: dura
                multiline: False
                input_filter: 'int'

            Label:
                text: "Low Intensity Duration: "
                color: root.label_font_color

            TextInput:
                id: break_dura
                multiline: False
                input_filter: 'int'

        SmoothButton:
            text: "Start Workout"
            back_color: 1,1,1,1
            color: root.label_font_color
            size_hint: 1, .15
            font_size: 50
            on_release:
                root.countdown()
                root.manager.transition.direction ="left"


<TimerWindow>:
    name: "timer"
    counter: counter
    pausemessage:pausemessage
    pausebutton:pausebutton
    stop_button: stop_button
    workouttype:workouttype
    cyclesleft:cyclesleft

    canvas:
        Color:
            rgb: (0.125490196078431,0.141176470588235,0.129411764705882)

        Rectangle:
            pos: self.pos
            size: self.size

    CustomButton:
        id: pausebutton
        text: "Pause"
        font_size: 100
        color: 1,1,1,0
        size_hint: 1,1
        pos_hint: {"x": 0,"bottom":1}
        on_release: root.pause_button()

    SmoothButton:
        id: stop_button
        text: "Stop"
        font_size: 40
        size_hint: 0.4, 0.15
        pos_hint: {"center_x": .5, "y": 0.005}
        back_color: 0.125490196078431,0.141176470588235,0.129411764705882,1
        on_release:
            app.root.current = "main"
            root.manager.transition.direction ="right"

    Label:
        id: counter
        text: "Go!"
        font_size: 100
        pos_hint: {"top": 1}

    Label:
        id: pausemessage
        text: ""
        font_size: 50
        pos_hint: {"top": 1.25}

    Label:
        id: workouttype
        text: ""
        font_size: 35
        pos_hint: {"top": 1.4}

    Label:
        id: cyclesleft
        text: ""
        font_size: 25
        pos_hint: {"top": 1.325}